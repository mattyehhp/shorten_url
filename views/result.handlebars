<div class="d-flex flex-column align-items-center">
    <h1 class="mt-3 mb-4">Success! Please use this link</h1>
    <a id="result-link" href="{{ shortUrl }}">{{ shortUrl }}</a>
    <button onclick="copyButtonOnClicked()" class="btn btn-primary mt-2 mb-3" id="copy-button">Copy</button>

</div>

<script>
    function copyButtonOnClicked() {
        const resultLink = document.querySelector("#result-link")
        navigator.clipboard.writeText(resultLink.innerHTML)
        .then(() => alert('copied'))
        .catch(error => console.log(error))
    }
</script>